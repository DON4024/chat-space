.chat-main
  .chat-main__group-info
    .info-items
      .info-items__name-items
        .info-items__name-items__group-name
          = @group.name
        .info-items__name-items__member-name
          = "member : "
          - @group.users.each do |memberName|
            = "#{memberName.name} "
      .info-items__btn
        = link_to edit_group_path(@group.id), class: "edit" do
          Edit
  .chat-main__message-list
    = render @messages


  .chat-main__message-form
    = form_for  [@group, @message] do |f|
      .input-box
        = f.text_field :content, class: 'message-box', placeholder: 'type a message' 
        = f.label :image, class: 'a' do
          = icon('fas', 'image', class: 'input-box__image')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'